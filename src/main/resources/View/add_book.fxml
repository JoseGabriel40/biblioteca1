<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="814.0" prefWidth="1133.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.controle.AddBookController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="titleField" prefHeight="26.0" prefWidth="435.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Editora:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="publisherField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Ano:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="barcodeField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <ComboBox fx:id="categoryComboBox" promptText="Selecione uma categoria" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Quantidade:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <Button onAction="#handleSave" prefHeight="26.0" prefWidth="100.0" text="Salvar" />
            <Button onAction="#handleLoadToEdit" prefHeight="26.0" prefWidth="100.0" text="Editar" />
            <Button onAction="#handleDelete" prefHeight="26.0" prefWidth="100.0" style="-fx-text-fill: red;" text="Excluir" />
        </HBox>

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <TextField fx:id="searchField" promptText="Buscar livro..." />

    <TableView fx:id="booksTable">
        <columns>
            <TableColumn fx:id="titleColumn" text="Título" />
            <TableColumn fx:id="authorColumn" text="Autor" />
            <TableColumn fx:id="barcodeColumn" text="ISBN" />
        </columns>
    </TableView>
</VBox>
