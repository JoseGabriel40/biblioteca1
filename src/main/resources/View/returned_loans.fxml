<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="818.0" prefWidth="1192.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.controle.ReturnedLoansController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label styleClass="titulo" text="Histórico de Empréstimos Devolvidos" />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <DatePicker fx:id="startDatePicker" promptText="Data Início" />
        <DatePicker fx:id="endDatePicker" promptText="Data Fim" />
        <Button onAction="#handleFilterByDate" text="Filtrar" />
    </HBox>

    <TableView fx:id="loanTable">
        <columns>
            <TableColumn fx:id="loanIdColumn" text="ID" />
            <TableColumn fx:id="userColumn" text="Usuário" />
            <TableColumn fx:id="bookColumn" text="Livro" />
            <TableColumn fx:id="loanDateColumn" text="Empréstimo" />
            <TableColumn fx:id="returnDateColumn" text="Devolução" />
        </columns>
    </TableView>

</VBox>
