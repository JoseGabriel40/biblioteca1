<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="767.0" prefWidth="1007.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.controle.BookManagementController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Gerenciamento de Livros" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
                <TextField fx:id="searchField" promptText="Buscar livros..." style="-fx-pref-width: 300;" />
                <Button onAction="#handleNew" text="Novo" />
                <Button onAction="#handleEdit" text="Editar" />
                <Button onAction="#handleDelete" style="-fx-text-fill: red;" text="Excluir" />
            </HBox>

            <TableView fx:id="booksTable" style="-fx-pref-height: 300;">
                <columns>
                    <TableColumn fx:id="titleColumn" prefWidth="150" text="Título" />
                    <TableColumn fx:id="authorColumn" prefWidth="120" text="Autor" />
                    <TableColumn fx:id="barcodeColumn" prefWidth="100" text="Código" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#handleClose" text="Fechar" />
        </HBox>
    </bottom>
</BorderPane>
